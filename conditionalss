def even_or_odd(n):
    return "Even" if n % 2 == 0 else "odd"

def largest_of_three(a,b,c):
    if a >=b and a>= c:
        return a
    elif b>= a and b>= c:
        return b
    else:
        return c    

def catagories_age(age):
    if age < 13:
        return "child"
    elif 13 <= age <= 19:
        return "Teen"
    else:
        return "Adult"

def triangle_type(a,b,c):
    if a == b == c:
        return "Equilateral"
    elif a == b or b == c or a ==c:
        return "Isosceles"
    else:
        return "Scalene"                    

